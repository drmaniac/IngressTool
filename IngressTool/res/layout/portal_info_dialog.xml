<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/portal_info_dialog_nav"
        android:layout_width="50dp"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/portal_info_dialog_level"
        android:src="@drawable/ic_nav" />

    <ImageView
        android:id="@+id/portal_info_dialog_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/portal_info_dialog_nav"
        android:src="@drawable/e_portal_l0" />

    <TextView
        android:id="@+id/portal_info_dialog_snippet"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/portal_info_dialog_nav"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/portal_info_dialog_nav"
        android:drawableRight="@drawable/ic_right_arrow"
        android:text="TextView" />

</RelativeLayout>